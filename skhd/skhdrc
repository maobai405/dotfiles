# open system Applications(打开系统应用)
cmd - e : open '/Applications/QSpace Pro.app'

# focus window(同一个空间切换窗口焦点)
cmd - h : yabai -m window --focus west
cmd - j : yabai -m window --focus south
cmd - k : yabai -m window --focus north
cmd - l : yabai -m window --focus east

# swap window(同一个空间调整窗口位置)
# cmd + shift - h : yabai -m window --swap west
# cmd + shift - j : yabai -m window --swap south
# cmd + shift - k : yabai -m window --swap north
# cmd + shift - l : yabai -m window --swap east

# fast focus desktop(切换空间焦点)
cmd - 0x32 : ~/.config/yabai/send_to_next_display.sh
cmd - tab : yabai -m space --focus recent
# cmd - n : yabai -m space --focus prev || yabai -m space --focus last
# cmd - m : yabai -m space --focus next || yabai -m space --focus first
cmd - 1 : yabai -m space --focus 1
cmd - 2 : yabai -m space --focus 2
cmd - 3 : yabai -m space --focus 3
cmd - 4 : yabai -m space --focus 4
cmd - 5 : yabai -m space --focus 5
cmd - 6 : yabai -m space --focus 6

# 0x32 equals to `
cmd + alt - 0x32 : ~/.config/yabai/send_to_next_display.sh move_window
cmd + alt - 1 : yabai -m window --space  1; yabai -m space --focus 1
cmd + alt - 2 : yabai -m window --space  2; yabai -m space --focus 2
cmd + alt - 3 : yabai -m window --space  3; yabai -m space --focus 3
cmd + alt - 4 : yabai -m window --space  4; yabai -m space --focus 4
cmd + alt - 5 : yabai -m window --space  5; yabai -m space --focus 5
cmd + alt - 6 : yabai -m window --space  6; yabai -m space --focus 6

# increase window size(增加窗口大小aswd)
cmd + ctrl - h : yabai -m window --resize left:-200:0
cmd + ctrl - l : yabai -m window --resize right:200:0
cmd + ctrl - j : yabai -m window --resize bottom:0:200
cmd + ctrl - k : yabai -m window --resize top:0:-200

# toggle window fullscreen zoom(单个窗口进入或退出全屏)
cmd + alt - f : yabai -m window --toggle zoom-fullscreen
# float / unfloat window and center on screen(控制窗口是否进入float模式,进入的话就不会自动被排列)
cmd + alt - p : ~/.config/yabai/toggle-window-floating-tiling.sh
# 强制float居中
cmd + alt - t : ~/.config/yabai/toggle-window-floating-tiling.sh forceCenter

# Stack
# alt - s进入或者退出stack，alt - d 切换到下一个stack
cmd + ctrl - s : ~/.config/yabai/toggle-window-bsp-stack.sh
cmd + ctrl - n : yabai -m window --focus stack.next || yabai -m window --focus stack.first
cmd + ctrl - p : yabai -m window --focus stack.prev || yabai -m window --focus stack.last
